<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main settings-->
    <style name="Theme.Travel" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:textColorSecondary">#606060</item>
    </style>

    <style name="Theme.Travel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">#D8D8D8</item>
        <item name="android:textColorSecondary">#1E1E1E</item>
        <item name="textColorAlertDialogListItem">#1E1E1E</item>
        <item name="color">#80CBC4</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyPopupMenu" parent="android:Theme.Holo.Light">
        <item name="android:popupBackground">@android:color/holo_green_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Background -->
    <style name="Theme.Travel.BackgroundActivity">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Text -->
    <style name="Theme.Travel.TextTitle">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Travel.TextSecond">
        <item name="android:color">#B3393939</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Theme.Travel.TextDescription">
        <item name="android:color">#B3353535</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Block slider -->
    <style name="Theme.Travel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Toolbar on MainActivity -->
    <style name="Theme.Travel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Background filter block on MainActivity -->
    <style name="Theme.Travel.FilterBlock">
        <item name="android:background">@color/purple_500</item>
    </style>

    <!-- Filter block -->
    <!-- Chip -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipIconTint">@color/shrine_pink_900</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/stroke_tint</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <!-- Tabs -->
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Buttons -->
    <style name="WhiteOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Listview -->
    <style name="ListViewStyle" parent="android:style/Widget.ListView">
        <item name="background">@color/white</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@color/black</item>
    </style>

    <style name="viewStyle">
        <item name="background">@color/black</item>
    </style>
</resources>